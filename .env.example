APP_NAME="Alfa Beauty"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Asia/Jakarta

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Slack Webhook for Production Error Alerts
# LOG_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# PostgreSQL (Supabase/Neon) - Production
# DB_CONNECTION=pgsql
# DB_HOST=your-host.supabase.co
# DB_PORT=5432
# DB_DATABASE=postgres
# DB_USERNAME=postgres
# DB_PASSWORD=your-password

#--------------------------------------------------------------------------
# Database Connection Pooling (for Supabase Transaction Pooler / PgBouncer)
#--------------------------------------------------------------------------
# Set to true for long-running processes (workers, cron)
# Set to false when using connection pooler (recommended for web)
DB_PERSISTENT_CONNECTIONS=false

# For Supabase, use Transaction Pooler endpoint (port 6543)
# POSTGRES_URL="postgresql://user:pass@host:6543/postgres?sslmode=require"

#--------------------------------------------------------------------------
# Session Configuration
#--------------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_PATH=/
SESSION_DOMAIN=null

# DEVELOPMENT (change these for production!)
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

#--------------------------------------------------------------------------
# ⚠️  PRODUCTION SESSION SETTINGS (REQUIRED for production deployment)
#--------------------------------------------------------------------------
# Uncomment and use these values for production:
# SESSION_ENCRYPT=true
# SESSION_SECURE_COOKIE=true
# SESSION_SAME_SITE=strict
# SESSION_LIFETIME=60

#--------------------------------------------------------------------------
# Sanctum API Token Configuration
#--------------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000
SANCTUM_TOKEN_EXPIRATION=1440
SANCTUM_TOKEN_PREFIX=alfabeauty_

# PRODUCTION SANCTUM SETTINGS (uncomment for production)
# SANCTUM_STATEFUL_DOMAINS=alfabeauty.id,www.alfabeauty.id
# SANCTUM_TOKEN_EXPIRATION=60

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#--------------------------------------------------------------------------
# Mail Configuration
#--------------------------------------------------------------------------
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@alfabeauty.id"
MAIL_FROM_NAME="${APP_NAME}"

# PRODUCTION MAIL (AWS SES)
# MAIL_MAILER=ses
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_DEFAULT_REGION=ap-southeast-1

# PRODUCTION MAIL (SMTP)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailgun.org
# MAIL_PORT=587
# MAIL_USERNAME=your-username
# MAIL_PASSWORD=your-password
# MAIL_ENCRYPTION=tls

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#--------------------------------------------------------------------------
# WhatsApp Business (B2B Checkout)
#--------------------------------------------------------------------------
WHATSAPP_BUSINESS_NUMBER=6281234567890
WHATSAPP_BUSINESS_NAME="Alfa Beauty"

#--------------------------------------------------------------------------
# CORS Configuration
#--------------------------------------------------------------------------
# CORS_ALLOWED_ORIGINS=https://alfabeauty.id,https://www.alfabeauty.id

#--------------------------------------------------------------------------
# Security Headers (for production)
#--------------------------------------------------------------------------
# FORCE_HTTPS=true
# HSTS_MAX_AGE=31536000

#--------------------------------------------------------------------------
# Vercel Deployment
#--------------------------------------------------------------------------
# VERCEL=true

VITE_APP_NAME="${APP_NAME}"

#==========================================================================
#                    ⚠️  PRODUCTION CHECKLIST ⚠️
#==========================================================================
# Before deploying to production, VERIFY all items:
#
# SECURITY (CRITICAL):
#   [ ] APP_ENV=production
#   [ ] APP_DEBUG=false
#   [ ] APP_KEY is generated (php artisan key:generate)
#   [ ] SESSION_ENCRYPT=true
#   [ ] SESSION_SECURE_COOKIE=true
#   [ ] SESSION_SAME_SITE=strict
#   [ ] HTTPS/SSL enabled on server
#
# DATABASE:
#   [ ] Configure PostgreSQL (not SQLite)
#   [ ] Run migrations (php artisan migrate)
#
# WHATSAPP (BUSINESS CRITICAL):
#   [ ] WHATSAPP_BUSINESS_NUMBER set to REAL number (not placeholder)
#   [ ] Test WhatsApp checkout flow
#
# MAIL:
#   [ ] Configure proper mail driver (SES/SMTP)
#   [ ] MAIL_FROM_ADDRESS set correctly
#
# API:
#   [ ] SANCTUM_STATEFUL_DOMAINS set to production domain
#   [ ] SANCTUM_TOKEN_EXPIRATION=60 (1 hour)
#
# MONITORING:
#   [ ] LOG_SLACK_WEBHOOK_URL configured for error alerts
#   [ ] LOG_LEVEL=warning (not debug)
#
#==========================================================================
