{
    "version": 2,
    "framework": null,
    "regions": [
        "sin1"
    ],
    "installCommand": "npm install",
    "buildCommand": "npm run build",
    "outputDirectory": "public",
    "functions": {
        "api/**/*.php": {
            "runtime": "vercel-php@0.7.1",
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/build/$1"
        },
        {
            "src": "/css/(.*)",
            "dest": "/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/js/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/images/$1"
        },
        {
            "src": "/product-images/(.*)",
            "dest": "/product-images/$1"
        },
        {
            "src": "/storage/(.*)",
            "dest": "/storage/$1"
        },
        {
            "src": "/products/(.*\\.(png|jpg|jpeg|gif|webp|svg|ico))",
            "dest": "/products/$1"
        },
        {
            "src": "/favicon\\.(ico|png)",
            "dest": "/favicon.$1"
        },
        {
            "src": "/api/cache-clear",
            "dest": "/api/cache-clear.php"
        },
        {
            "src": "/api/cron/(.*)",
            "dest": "/api/cron/$1.php"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/cleanup-orders",
            "schedule": "0 1 * * *"
        },
        {
            "path": "/api/cron/sync-inventory",
            "schedule": "0 3 * * *"
        }
    ]
}